import time

def love_statement():
    print("Я хочу сказать тебе, что...")

    # Постепенное отображение текста для создания эффекта ожидания
    message = "Я тебя люблю!"
    for char in message:
        print(char, end='', flush=True)
        time.sleep(0.2)  # Приостановка на 0.2 секунды для задержки между символами
    print("\n")

    # Дополнительные сообщения для создания атмосферы
    print("Ты самый классный котенок")
    print("Я тебя просто обожаю")
    print("Ты самое лучшее, что у меня есть,")
    print("а мои мысли заняты только тобой.")

    # Заключительные слова
    print("\n")
    print("Я готов пройти через любые трудности,")
    print("чтобы быть рядом с тобой всегда.")
    print("Ты моя любовь и мое счастье.")

# Вызываем функцию для вывода признания в любви
love_statement()
